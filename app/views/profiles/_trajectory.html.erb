<%= simple_form_for(user, url: "profiles/update_trajectory", html: { method: :post, :class=>"devise-form" }) do |f| %>

  <%= f.input :id,  as: :hidden %>

  <div class="container-fluid ">
    <div class="row">
      <h5>Personales</h5>
    </div>
    <div class="row">
      <div class="col-5">
        <%= f.input :linkedin, label: 'LinkedIn', wrapper_html: { class: 'xinput-profile' } %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <%= f.input :telephone, label: 'Teléfono', wrapper_html: { class: 'xinput-profile' } %>
      </div>
      <div class="col-9">
        <%= f.input :address, label: 'Dirección', wrapper_html: { class: 'xinput-profile' } %>
      </div>
    </div>
    <div class="row">
      <h5>Académicos</h5>
    </div>
    <div class="row align-items-start">
      <div class="col-3">
        <%= f.input :sni,  as: :select, :collection => User::SNI.invert, :label => "SNI" ,:include_blank => false,
                    input_html: { class: 'form-control form-select-sm sm-3' },
                    wrapper_html: { class: 'mb-3 select form-select form-select-md' } %>
      </div>
    </div>
    <div class="row">
      <div class="col-3">
        <%= f.input :academic_grade,  as: :select, :collection => User::ACADEMIC_GRADE.invert, :label => "Grado" ,:include_blank => false,
                    input_html: { class: 'form-control' }, wrapper_html: { class: 'form-select form-select-md' } %>
      </div>
      <div class="col-4">
        <%= f.input :academic_institution, label: 'Instituto', wrapper_html: { class: 'xinput-profile' } %>
      </div>
      <div class="col-5">
        <%= f.input :academic_program, label: 'Programa', wrapper_html: { class: 'xinput-profile' } %>
      </div>
    </div>
    <div class="row">
      <div class="col-xl">
        <%= f.input :academic_description, as: :text, label: 'Descripción', wrapper_html: { class: 'xinput-profile' } %>
      </div>
    </div>

    <div class="row">
      <h5>Laborales</h5>
    </div>
    <div class="row">
      <div class="col-3">
        <%= f.input :work_type, as: :select, :collection => User::WORK_TYPE.invert, :label => "Tipo" ,:include_blank => false,
                    input_html: { class: 'form-control' }%>
      </div>
      <div class="col-4">
        <%= f.input :work_place, label: 'Empresa/Lugar', wrapper_html: { class: 'input-profile' } %>
      </div>
      <div class="col-5">
        <%= f.input :work_position, label: 'Puesto', wrapper_html: { class: 'input-profile' } %>
      </div>
    </div>
    <div class="row">
      <div class="col-xl">
        <%= f.input :work_description, as: :text, label: 'Descripción', wrapper_html: { class: 'input-profile' } %>
      </div>
    </div>

  </div>
  <%= f.button :submit, "Actualizar datos", class: "thredded--button" %>

<%end %>
